<%- include('_layouts/header') -%>
    <main>
        <section>
            <h1>List of contacts: </h1>
            <table class="contact-list">
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Apples</th>
                    <th colspan="2">Manage</th>
                </tr>
                <% contacts.forEach(function(contact){ %>
                    <tr>
                        <td>
                            <%= contact.name%>
                        </td>
                        <td>
                            <%= contact.phone%>
                        </td>
                        <td>
                            <%= contact.qyt%>
                        </td>
                        <td><a href="/edit/<%= contact._id%>">Edit</a></td>
                        <td><a href="/delete/<%= contact._id%>">Delete</a></td>
                    </tr>
                    <% })%>

            </table>
        </section>
    </main>
    <%- include('_layouts/footer') -%>